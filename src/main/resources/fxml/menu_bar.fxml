<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane dividerPositions="0.10552763819095477" minHeight="100" minWidth="300" orientation="VERTICAL" prefHeight="461.0" prefWidth="701.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.team3.gui.MenuController">
    <items>

        <MenuBar layoutX="-1.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="60.0" minHeight="60.0" style="-fx-background-color: #e06666;">
            <menus>
                <Menu fx:id="accountMenu" mnemonicParsing="false" style="-fx-font-size: 20;" text="Account">
