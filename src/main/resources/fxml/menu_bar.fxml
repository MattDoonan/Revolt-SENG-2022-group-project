                    </items>
                </Menu>
                <Menu fx:id="manageVehiclesMenu" mnemonicParsing="false" style="-fx-font-size: 20;" text="Manage Vehicles">
                    <items>
                        <MenuItem fx:id="openVehicles" mnemonicParsing="false" style="-fx-font-size: 20;" text="Open Garage" onAction="#loadVehicleScreen" />
                    </items>
                </Menu>
                <Menu fx:id="homeMenu" mnemonicParsing="false" style="-fx-font-size: 20;" text="Home">
                    <MenuItem fx:id="loadHome" mnemonicParsing="false" onAction="#loadHome" text="Main Page"/>
